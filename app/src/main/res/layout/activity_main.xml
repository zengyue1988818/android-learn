<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/main_body"
            android:layout_width="match_parent"
            android:layout_height="641dp"
            android:background="@android:color/white">

        </FrameLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/btn_group"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="#F2F2F2"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn_course"
            style="@style/TabMenuItem"
            android:layout_width="117dp"
            android:layout_height="61dp"
            android:background="@mipmap/ic_course"
            android:text="课程" />

        <RadioButton
            android:id="@+id/btn_exercise"
            style="@style/TabMenuItem"
            android:layout_width="89dp"
            android:layout_height="81dp"
            android:background="@mipmap/ic_exercise"
            android:text="习题" />

        <RadioButton
            android:id="@+id/btn_news"
            style="@style/TabMenuItem"
            android:layout_width="101dp"
            android:layout_height="61dp"
            android:background="@mipmap/ic_message"
            android:text="资讯" />

        <RadioButton
            android:id="@+id/btn_me"
            style="@style/TabMenuItem"
            android:layout_width="106dp"
            android:layout_height="61dp"
            android:background="@mipmap/ic_my"
            android:text="我" />
    </RadioGroup>
</LinearLayout>